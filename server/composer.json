{
    "name": "shinkansen/api-server",
    "description": "Modern PHP REST API server for Shinkansen Challenge",
    "type": "project",
    "require": {
        "php": ">=8.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
        "optimize-autoloader": true
    },
    "scripts": {
        "start": "php -S 0.0.0.0:8080 -t public public/index.php",
        "start-simple": "php -S 0.0.0.0:8080 -t public public/index_simple.php"
    }
}